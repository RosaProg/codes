<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mobihelp_start_new_conversation_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone" >

    <TextView
        android:id="@+id/mobihelp_conversation_ticket_closed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="8dp"
        android:scrollHorizontally="true"
        android:text="@string/mobihelp_message_conversation_ended"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/mobihelp_conversation_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text="@string/mobihelp_message_start_new_conversation" />

</LinearLayout>
