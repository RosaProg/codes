<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="deliverytrack.vss.com.deliverytrack.fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btn_profiledetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_inside_app_bg"
        android:text="@string/my_settings"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/btn_payone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_profiledetails"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_inside_app_bg"
        android:text="PAY ONE"
        android:textColor="@android:color/white" />


    <Button
        android:id="@+id/btn_bankdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_payone"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_inside_app_bg"
        android:text="@string/bankdetails"
        android:textColor="@android:color/white" />


</LinearLayout>
