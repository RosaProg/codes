%tr
  %td.pitch
    = link_to image_tag(donation.pitch.featured_image.url(:thumb)), pitch_url(donation.pitch)
    PITCH:
    = link_to h(donation.pitch.headline), pitch_url(donation.pitch)
  %td.donated= donation.created_at.to_s(:date)
  %td.donation== #{format_credits(donation.amount)} credits
  %td.status
    = render :partial => "shared/table_progress_bar", :locals => {:pitch => donation.pitch}
  %td.actions
    - unless donation.pitch.accepted? || donation.pitch.funded?
      = link_to "Donate More", pitch_url(donation.pitch) if current_user.can_donate_to? donation.pitch
    
